{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "gcc build active file",
        "command": "gcc",
        "args": [
          "-std=c11",
          "-I${workspaceFolder}/src",
          "-I${workspaceFolder}/src/includes",
          "-g",
          "${workspaceFolder}/src/main.c",
          "${workspaceFolder}/src/includes/physics/src/equations.c",
          "${workspaceFolder}/src/includes/physics/src/collision.c",
          "${workspaceFolder}/src/includes/physics/src/simulation.c",
          "${workspaceFolder}/src/includes/utils/util_functions.c",
          "${workspaceFolder}/src/includes/utils/object_manager.c",
          "-o",
          "${workspaceFolder}/main",
          "-lraylib",
          "-lm",
          "-lpthread",
          "-ldl",
          "-lrt",
          "-lX11",
          "-Wall",
          "-Wextra"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build"
      },
      {
        "type": "cppbuild",
        "label": "C/C++: gcc build active file",
        "command": "/usr/bin/gcc",
        "args": [
          "-std=c11",
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "-I${workspaceFolder}/src/includes",
          "-lraylib",
          "-lm",
          "-lpthread",
          "-ldl",
          "-lrt",
          "-lX11"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }